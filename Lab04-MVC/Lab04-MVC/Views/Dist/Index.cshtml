@{
    ViewBag.Title = "Kasper";
}
    <div>
        <div>
            <div>
                <h2>Lab №4. Entity Framework</h2>
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <td>Name</td>
                            <td>Phone number</td>
                            <td>Udpate?</td>
                            <td>Delete?</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Contacts != null)
                        {
                            foreach (var contact in (ViewBag.Contacts as List<Lab04_MVC.Models.Contact>))
                            {
                        <tr>
                            <td>@contact.Name</td>
                            <td>@contact.PhoneNumber</td>
                            <td>
                                <p><a class="btn btn-default" href="/Dist/Update/@contact.Id">Update</a></p>
                            </td>
                            <td>
                                <p><a class="btn btn-default" href="/Dist/Delete/@contact.Id">Delete</a></p>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <p><a class="btn btn-default" href="/Dist/Add">Add new phone number</a></p>
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>

